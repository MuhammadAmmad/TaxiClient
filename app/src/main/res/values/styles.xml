<resources>
    <style name="AppTheme" parent="PreferenceFixTheme.DayNight">
        <item name="@android:windowNoTitle">true</item>
        <item name="@android:windowFullscreen">true</item>
        <item name="colorAccent">@color/light_green</item>
    </style>

    <style name="AppTheme.Day" parent="PreferenceFixTheme.Light">
        <item name="smallBarColor">@color/grey_250</item>
        <item name="@android:windowNoTitle">true</item>
        <item name="@android:windowFullscreen">true</item>
        <item name="tabSelector">@drawable/tab_selector_day</item>
        <item name="loginBackground">@drawable/first_activity_background_day</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:buttonStyle">@style/TaxiButton.Day</item>
        <item name="colorAccent">@color/light_green</item>
        <item name="airTabTextColor">@color/grey_800</item>
        <item name="airTabTextSelectedColor">@color/grey_800</item>
    </style>

    <style name="AppTheme.Night" parent="PreferenceFixTheme">
        <item name="smallBarColor">@color/grey_750</item>
        <item name="@android:windowNoTitle">true</item>
        <item name="@android:windowFullscreen">true</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:buttonStyle">@style/TaxiButton.Night</item>
        <item name="tabSelector">@drawable/tab_selector_night</item>
        <item name="loginBackground">@drawable/first_activity_background_night</item>
        <item name="colorAccent">@color/light_green</item>
        <item name="airTabTextColor">@color/white</item>
        <item name="airTabTextSelectedColor">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar.Night" parent="AppTheme.Night">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Day" parent="AppTheme.Day">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.WtfPreference" parent="@style/PreferenceThemeOverlay">
        <item name="preferenceScreenStyle">@style/Preference.PreferenceScreen</item>
        <item name="preferenceFragmentStyle">@style/PreferenceFragment</item>
        <item name="preferenceCategoryStyle">@style/Preference.Category</item>
        <item name="preferenceStyle">@style/Preference</item>
        <item name="preferenceInformationStyle">@style/Preference.Information</item>
        <item name="checkBoxPreferenceStyle">@style/Preference.CheckBoxPreference</item>
        <item name="switchPreferenceCompatStyle">@style/Preference.SwitchPreferenceCompat</item>
        <item name="dialogPreferenceStyle">@style/Preference.DialogPreference</item>
        <item name="editTextPreferenceStyle">@style/Preference.DialogPreference.EditTextPreference</item>
        <item name="preferenceFragmentListStyle">@style/PreferenceFragmentList</item>
    </style>

    <style name="PreferenceThemeOverlay">
        <item name="preferenceScreenStyle">@style/Preference.PreferenceScreen</item>
        <item name="preferenceFragmentStyle">@style/PreferenceFragment</item>
        <item name="preferenceCategoryStyle">@style/Preference.Category</item>
        <item name="preferenceStyle">@style/Preference</item>
        <item name="preferenceInformationStyle">@style/Preference.Information</item>
        <item name="checkBoxPreferenceStyle">@style/Preference.CheckBoxPreference</item>
        <item name="switchPreferenceCompatStyle">@style/Preference.SwitchPreferenceCompat</item>
        <item name="dialogPreferenceStyle">@style/Preference.DialogPreference</item>
        <item name="editTextPreferenceStyle">@style/Preference.DialogPreference.EditTextPreference</item>
        <item name="preferenceFragmentListStyle">@style/PreferenceFragmentList</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/teal</item>
        <item name="colorControlActivated">@color/teal</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <attr name="tabSelector" format="reference"/>
    <attr name="loginBackground" format="reference"/>
    <attr name="airTabTextColor" format="reference"/>
    <attr name="airTabTextSelectedColor" format="reference"/>
    <attr name="smallBarColor" format="reference"/>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="TaxiButton" parent="android:Widget.Button">
        <item name="android:textColor">?attr/editTextColor</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="TaxiButton.Night" parent="TaxiButton">
        <item name="android:background">@drawable/button_night</item>
    </style>

    <style name="TaxiButton.Day" parent="TaxiButton">
        <item name="android:background">@drawable/bg_tab_day1</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">18sp</item><!-- text size in menu-->
        <item name="listPreferredItemHeightSmall">60dp</item><!-- item size in menu-->
    </style>
</resources>
