<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceScreen
        android:title="Air">

        <PreferenceCategory
            android:title="Order of orders">
            <ListPreference
                android:defaultValue="-1"
                android:entries="@array/pref_order_of_orders_titles"
                android:entryValues="@array/pref_order_of_orders_values"
                android:key="waiting_time_list"
                android:title="@string/pref_title_order_of_orders" />

            <CheckBoxPreference
                android:defaultValue="true"
                android:key="preorder_switch"
                android:title="Show order and preorder together" />

            <CheckBoxPreference
                android:defaultValue="true"
                android:key="hide_deleted_switch"
                android:title="Hide deleted orders from air" />
        </PreferenceCategory>
    </PreferenceScreen>

    <PreferenceScreen
        android:title="Sound"
        android:enabled="false">
    </PreferenceScreen>

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="example_switch"
        android:title="Vibration" />

    <PreferenceScreen
        android:title="Style settings">

        <!--<ListPreference-->
