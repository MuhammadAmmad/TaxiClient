<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:title="Air"
        android:summary="some stuff">
        <intent
            android:targetPackage="com.example.roman.test"
            android:targetClass="com.example.roman.test.SettingsActivity"
            android:action="com.example.roman.test.AIR" />
    </Preference>

    <PreferenceScreen
        android:title="Sound"
        android:enabled="false">
    </PreferenceScreen>

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="example_switch"
        android:title="Vibration" />

    <Preference
        android:title="Style"
        android:summary="some stuff">
        <intent
            android:targetPackage="com.example.roman.test"
            android:targetClass="com.example.roman.test.SettingsActivity"
            android:action="com.example.roman.test.STYLE" />
    </Preference>

    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_waiting_time_titles"
        android:entryValues="@array/pref_waiting_time_values"
        android:key="waiting_time_list"
        android:title="@string/pref_title_waiting_time" />

    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_languages_titles"
        android:entryValues="@array/pref_languages_values"
        android:key="languages_list"
        android:title="@string/pref_title_languages" />

    <Preference
        android:title="Clear memory"
        android:summary="some stuff">
        <intent
            android:targetPackage="com.example.roman.test"
            android:targetClass="com.example.roman.test.SettingsActivity"
            android:action="com.example.roman.test.CACHE" />
    </Preference>

    <Preference
        android:title="Updates"
        android:summary="some stuff">
        <intent
            android:targetPackage="com.example.roman.test"
            android:targetClass="com.example.roman.test.SettingsActivity"
            android:action="com.example.roman.test.UPDATE" />
    </Preference>

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="example_switch"
        android:title="GPS Tracking" />
</PreferenceScreen>
