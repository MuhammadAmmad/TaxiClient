        android:key="languages_list"
        android:title="@string/pref_title_languages" />

    <PreferenceScreen
        android:title="Clear Cache">

        <Preference
            android:title="Orders + messages"/>
        <Preference
            android:title="Orders"/>
        <Preference
            android:title="Messages"/>

    </PreferenceScreen>

    <PreferenceScreen
        android:title="Updates">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="example_switch"
            android:title="Do not remind about updates" />

        <Preference
            android:title="Update"/>
        <Preference
